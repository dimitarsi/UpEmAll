
<%= form_for(@user) do |f| %>
  
  <%= label_tag :name, 'Потребителско име' %>
  <%= text_field :name %> <br />
  
  <%= label_tag :password, 'Парола' %>
  <%= password_field_tag :password %><br />

  <%= label_tag :password_confirmation, 'Потвърди паролата' %>
  <%= password_field_tag :password_confirmation %>
  
  <br />
  
  <%= submit_tag 'Регистрирай се' %>
  
<% end %>