  def create
    new_file = self.upload_it params[:document]
    if new_file.valid? then
      new_file.save
    else
    
    end
  end
  
  
  def upload_it file
    f_name = file[:url].original_filename
    directory = "public/data"
    path = File.join(directory,f_name)
    File.open(path,'wb') { |f| f.write(file[:url].read ) }
    
    Document.new :url => path, :name => f_name, :user_id => file[:user_id]
  end
end
